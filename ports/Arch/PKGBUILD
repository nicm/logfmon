pkgname=logfmon
pkgver=0.7
pkgrel=1
pkgdesc="Log file monitor"
url="http://www.sf.net/projects/logfmon"
license="BSD"
depends=()
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://kent.dl.sourceforge.net/sourceforge/logfmon/$pkgname-$pkgver.tar.gz)
md5sums=('f1bd697b140baef703f49fcc48b1a42c')

build() {
  cd $startdir/src/$pkgname-$pkgver
  sh make-linux.sh
  install -D -m 744 $startdir/logfmon $startdir/pkg/etc/rc.d/logfmon
  install -D -m 555 logfmon $startdir/pkg/usr/sbin/logfmon
  install -D -m 444 logfmon.8 $startdir/pkg/usr/man/man8/logfmon.8
  install -D -m 444 logfmon.conf.5 $startdir/pkg/usr/man/man5/logfmon.conf.5
  install -D -m 440 logfmon.conf $startdir/pkg/etc/logfmon.conf
}

